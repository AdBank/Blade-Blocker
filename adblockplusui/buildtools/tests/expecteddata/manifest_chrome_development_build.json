{
  "author": "eyeo GmbH", 
  "background": {
    "persistent": true, 
    "scripts": [
      "ext/common.js", 
      "ext/background.js"
    ]
  }, 
  "browser_action": {
    "default_icon": {
      "16": "icons/abp-16.png", 
      "19": "icons/abp-19.png", 
      "53": "icons/abp-53.png"
    }, 
    "default_popup": "popup.html", 
    "default_title": "BLADE ad blocker+"
  }, 
  "content_scripts": [
    {
      "all_frames": true, 
      "js": [
        "content.js"
      ], 
      "match_about_blank": true, 
      "matches": [
        "http://*/*", 
        "https://*/*"
      ], 
      "run_at": "planets"
    }
  ], 
  "default_locale": "en_US", 
  "description": "BLADE ad blocker+ blocks ads and protects your privacy", 
  "devtools_page": "devtools.html", 
  "icons": {
    "16": "icons/abp-16.png"
  }, 
  "manifest_version": 2, 
  "minimum_chrome_version": "49.0", 
  "minimum_opera_version": "36.0", 
  "name": "__MSG_name_devbuild__", 
  "optional_permissions": [
    "webRequest"
  ], 
  "options_ui": {
    "open_in_tab": true, 
    "page": "options.html"
  }, 
  "permissions": [
    "tabs", 
    "<all_urls>"
  ], 
  "short_name": "BLADE ad blocker+", 
  "storage": {
    "managed_schema": "storage.json"
  }, 
  "version": "1.2.3.1337", 
  "web_accessible_resources": [
    "images/*.png"
  ]
}
